" A double quote character starts a comment.

set ignorecase
set nominimap
set smartcase

let mapleader=,
let maplocalleader=/

nnoremap <leader><leader> :Neovintageous action=reveal_side_bar<CR>
nnoremap <leader>ca :SideBarCopyAbsolutePath<CR>
nnoremap <leader>cn :SideBarCopyName<CR>
nnoremap <leader>cr :SideBarCopyRelativePath<CR>
nnoremap <leader>d :Neovintageous action=toggle_side_bar<CR>
nnoremap <leader>ek :OpenKeyBindings<CR>
nnoremap <leader>en :Neovintageous action=open_rc_file<CR>
nnoremap <leader>ep :OpenPreferences<CR>
nnoremap <leader>ga :silent !git add %<CR>
nnoremap <leader>gd :ToggleInlineDiff<CR>
nnoremap <leader>gr :silent !git reset<CR>
nnoremap <leader>gu :GenerateUnitTest<CR>
nnoremap <leader>hm :RevertModification<CR>
nnoremap <leader>hp :PasteFromHistory<CR>
nnoremap <leader>hu :RevertHunk<CR>
nnoremap <leader>oc :GitOpen commit=true<CR>
nnoremap <leader>oi :GitOpen issue=true<CR>
nnoremap <leader>oo :GitOpen<CR>
nnoremap <leader>q gqip:w<CR>
nnoremap <leader>r :reg<CR>
nnoremap <leader>sr :SublimeLinterLineReport<CR>
nnoremap <leader>st :SublimeLinterPanelToggle<CR>
nnoremap <leader>wh :CarryFileToPane direction=left<CR>
nnoremap <leader>wj :CarryFileToPane direction=down<CR>
nnoremap <leader>wk :CarryFileToPane direction=up<CR>
nnoremap <leader>wl :CarryFileToPane direction=right<CR>
noremap <C-l> :nohlsearch<CR>
noremap <C-s> :w<CR>
noremap <D-I> :ShowOverlay overlay=goto text=@<CR>
noremap <D-i> :GotoSymbolInProject<CR>

noremap <leader>ga :reg

" Easy insertion of a trailing ;
nnoremap ;; <Esc>A;<Esc>;

nnoremap <space> :UserFormatLink<CR>

" The "Q" command formerly performed this function.
nnoremap Q gq

" Yank and paste using system clipboard.
noremap <leader>y "+y
noremap <leader>Y "+Y
noremap <leader>p "+p
noremap <leader>P "+P

" Sorting.
nnoremap <leader>s) vi):sort u<CR>
nnoremap <leader>s] vi]:sort u<CR>
nnoremap <leader>si vii:sort u<CR>
nnoremap <leader>sp vip:sort u<CR>
nnoremap <leader>ss vip:sort u<CR>
vnoremap <leader>s :sort u<CR>

" Finders.
noremap <leader>ff  :UserFindInFiles<CR>
noremap <leader>fi  :UserFindInFiles use_filter=false<CR>

" Dump Variable.
nnoremap <leader>vd :UserDumpVariable phpfunc=dump<CR>
nnoremap <leader>vm :UserDumpVariable phpfunc=dump content=__METHOD__<CR>
nnoremap <leader>vp :UserDumpVariable phpfunc=print_r<CR>
nnoremap <leader>vr :UserDumpVariable sublime_region_view_string=true<CR>
nnoremap <leader>vv :UserDumpVariable phpfunc=dd<CR>

" Test: https://github.com/gerardroche/sublime-test
nnoremap <D-n> :TestNearest<CR>
nnoremap <leader>ff :TestFile<CR>
nnoremap <leader>a :TestSuite<CR>
nnoremap <leader>gg :TestVisit<CR>
nnoremap <leader>l :TestLast<CR>
nnoremap <leader>t :TestNearest<CR>

" Origami: https://packagecontrol.io/packages/Origami
nnoremap <leader>. :ToggleZoomPane fraction=0.98<CR>

" Dev testing
" nnoremap FileType go,html gd :LspSymbolDefinition<CR>
" nnoremap FileType php gd :LspSymbolDefinition<CR>
nnoremap ø :marks
nnoremap → :registers
